<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>[%p][%d{HH:mm:ss.SSS}][%c{1}.%M \(l.%L\)] %m%n</pattern>
		</encoder>
	</appender>

	<appender name="REQUEST_LOGGER_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>[REQ][%d{HH:mm:ss.SSS}] %m%n</pattern>
		</encoder>
	</appender>	

	<logger name="eu.anastasis" level="trace" additivity="false">
		<appender-ref ref="CONSOLE_APPENDER" />
	</logger>
	
	<logger name="eu.anastasis.mondoelli.core.filters.RequestLoggingFilter" level="debug" additivity="false">
		<appender-ref ref="REQUEST_LOGGER_APPENDER" />
	</logger>

	<root level="ERROR">
		<appender-ref ref="CONSOLE_APPENDER" />
	</root>

</configuration>
